@dp.message(Command("myid"))
async def cmd_myid(message: types.Message) -> None:
    """Show user's ID for debugging."""
    uid = message.from_user.id
    if uid in users:
        user_data = users[uid]
        await message.answer(f"–í–∞—à ID: {uid}\n"
                            f"Username: @{user_data['username']}\n"
                            f"–ë–∞–ª–∞–Ω—Å: {user_data['moons']}\n"
                            f"–ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è –≤ —Ç–æ–ø–µ: {user_data.get('show_in_top', True)}\n"
                            f"–ê–¥–º–∏–Ω: {user_data['is_admin']}")
    else:
        await message.answer(f"–í–∞—à ID: {uid}\n"
                            f"–í—ã –Ω–µ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω—ã!")

@dp.message(Command("debug"))
async def cmd_debug(message: types.Message) -> None:
    """Debug information."""
    uid = message.from_user.id
    if uid in users:
        user_data = users[uid]
        visible_in_top = sum(1 for u in users.values() if u.get('show_in_top', True))
        total_users = len(users)
        
        await message.answer(f"üìä Debug info:\n"
                            f"ID: {uid}\n"
                            f"Username: {user_data['username']}\n"
                            f"–ë–∞–ª–∞–Ω—Å: {user_data['moons']}\n"
                            f"–ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è –≤ —Ç–æ–ø–µ: {user_data.get('show_in_top', True)}\n"
                            f"–ê–¥–º–∏–Ω: {user_data['is_admin']}\n"
                            f"–í–∏–∫—Ç–æ—Ä–∏–Ω–∞ –ø—Ä–æ–π–¥–µ–Ω–∞: {user_data['quiz_passed']}\n"
                            f"–í—Å–µ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–π: {total_users}\n"
                            f"–ü–æ–∫–∞–∑—ã–≤–∞–µ—Ç—Å—è –≤ —Ç–æ–ø–µ: {visible_in_top}")
    else:
        await message.answer("–í—ã –Ω–µ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω—ã!")
# ====================== –ö–û–ù–ï–¶ –û–¢–õ–ê–î–ö–ò ======================

# Command handlers
@dp.message(Command("start"))
async def cmd_start(message: types.Message) -> None:
    """Handle the /start command."""
    register_user(message.from_user)
    
    # –ü—Ä–æ–≤–µ—Ä—è–µ–º, —è–≤–ª—è–µ—Ç—Å—è –ª–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –∞–¥–º–∏–Ω–æ–º
    if message.from_user.id in ADMIN_IDS:
        await message.answer(
            "üëã –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å, –∞–¥–º–∏–Ω–∏—Å—Ç—Ä–∞—Ç–æ—Ä! –í—ã–±–µ—Ä–∏—Ç–µ —Ä–µ–∂–∏–º:",
            reply_markup=build_admin_switch_menu()
        )
    else:
        await message.answer("üëã –î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å! –í—ã —Å–Ω–æ–≤–∞ –≤ —Ç–æ–ø–µ! –í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–π—Å—Ç–≤–∏–µ:", reply_markup=build_main_menu())

@dp.message(Command("mode"))
async def cmd_mode(message: types.Message) -> None:
